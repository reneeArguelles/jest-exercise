{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "jest"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    }
}